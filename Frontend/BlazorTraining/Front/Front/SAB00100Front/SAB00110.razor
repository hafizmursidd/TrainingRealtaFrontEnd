@page "/SAB00110"
@using R_BlazorFrontEnd.Controls.Events
@inherits R_Page
@inject R_ILocalizer<Resources_Dummy_Class> _localizer
@attribute [R_Page(Title = "Employee List")]

<R_StackLayout>
  <R_Grid @ref="GridRef"
          DataSource="_viewModel.EmployeeList"
          R_ServiceGetListRecord="R_ServiceGetListRecord"
          Pageable="true"
          PageSize="3">
    <R_GridColumns>
      <R_GridNumericColumn FieldName="EmployeeID"
                           HeaderText="@_localizer["_EmployeeId"]"/>
      
      <R_GridTextColumn FieldName="FirstName"
                        HeaderText="@_localizer["_FirstName"]"/>
      
      <R_GridTextColumn FieldName="LastName"
                        HeaderText="@_localizer["_LastName"]"/>
      
    </R_GridColumns>
  </R_Grid>
  
  <R_ItemLayout xs="2">
    <R_Button OnClick="Button_OnClickAsync">
      @_localizer["_SelectData"]
    </R_Button>
  </R_ItemLayout>
</R_StackLayout>