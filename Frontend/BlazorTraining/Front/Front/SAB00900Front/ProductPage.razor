@inherits R_Page
@inject R_ILocalizer<SAB00900FrontResources.Resources_Dummy_Class> _localizer
@attribute [R_Page(Title = "Product List")]

<R_StackLayout>
    <R_Grid @ref="@_gridRef"
            DataSource="@GridViewModel.ProductList"
            Pageable
            PageSize="10"
            R_ServiceGetListRecord="@R_ServiceGetListRecord">
        <R_GridColumns>
            <R_GridNumericColumn FieldName="ProductID" HeaderText="@_localizer["_ProductId"]"></R_GridNumericColumn>
            <R_GridTextColumn FieldName="ProductName" HeaderText="@_localizer["_ProductName"]"></R_GridTextColumn>
        </R_GridColumns>
    </R_Grid>

    <R_StackLayout Row="true">
        <R_ItemLayout xs="10">
        </R_ItemLayout>
        <R_ItemLayout xs="2">
            <R_Button OnClick="@OnClose">@_localizer["_Close"]</R_Button>
        </R_ItemLayout>
    </R_StackLayout>
</R_StackLayout>